                                       </children>
                                    </VBox>
                                    <VBox prefHeight="327.0" prefWidth="327.0">
                                       <children>
                                          <TableView fx:id="raportTable" prefHeight="200.0" prefWidth="149.0">
                                            <columns>
                                              <TableColumn fx:id="raportDate" prefWidth="75.0" text="Date" />
